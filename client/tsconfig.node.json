{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["vite.config.*", "vitest.config.*", "cypress.config.*"],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "noEmit": true, // 修改为 true，这样可以使用 allowImportingTsExtensions
    "allowImportingTsExtensions": true // 启用此选项以允许导入 .ts 扩展名
  }
}
